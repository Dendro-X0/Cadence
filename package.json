{
  "name": "cadence",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "engines": { "node": ">=18.0.0" },
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "dev:desktop": "npm --workspace apps/desktop run tauri dev",
    "dev:all": "concurrently \"npm --workspace apps/web run dev\" \"npm --workspace apps/desktop run tauri dev\"",
    "build:web": "npm --workspace apps/web run build",
    "preview:web": "npm --workspace apps/web run preview",
    "typecheck": "npm -ws run typecheck",
    "tauri": "npm --workspace apps/desktop run tauri"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
