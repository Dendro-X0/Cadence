{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "types": ["vitest", "node"],
    "paths": {
      "@cadence/core-domain/*": ["../../packages/core-domain/src/*"],
      "@cadence/storage/*": ["../../packages/storage/src/*"],
      "@cadence/templates/*": ["../../packages/templates/src/*"],
      "@cadence/notifications/*": ["../../packages/notifications/src/*"]
    }
  },
  "include": ["src", "vite-env.d.ts"]
}
